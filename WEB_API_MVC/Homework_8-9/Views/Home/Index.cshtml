@model Homework_8_9.Models.HomeModel.PageViewModel
@{
    ViewBag.Title = "Home Page";
}

<main>
    <section class="row" aria-labelledby="aspnetTitle">
        <h1 id="title">Simple Shop</h1>
    </section>

    <div class="container mt-4">
        <div class="row align-items-start">
            <div class="col-12 col-md-6 col-lg-3">
                <select class="form-select js-parent-category-select">
                    <option selected value="">აირჩიეთ კატეგორია</option>
                    @if (Model.HasProductCategories)
                    {
                        foreach (var Item in Model.ParentProductCategories)
                        {
                            <option value="@Html.Raw(Item.ProductCategoryID)">@Html.Raw(Item.ProductCategoryName)</option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-6 col-12 col-lg-3">
                <select class="form-select js-category-select">
                    <option selected value="" class="initial-filter">აირჩიეთ ქვე-კატეგორია</option>

                </select>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row product js-products-row">
        </div>
    </div>

    <br />
    <br />
    <h1>@ViewBag.MyCustomText</h1>

</main>

@section scripts{
    <script src="~/Scripts/Home.js?v=1.00"></script>
    <script>
        HomeModel.UrlGetProductCategories = '@Html.Raw(Model.UrlGetProductCategories)';
        HomeModel.UrlGetProducts = '@Html.Raw(Model.UrlGetProducts)';
    </script>
}